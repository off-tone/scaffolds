{
  "extends": ["@off-tone/base-linter-formatter"],
  "overrides": [
    {
      "include": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.jsx", "src/**/*.js"],
      "linter": {
        "rules": {
          "suspicious": {
            // React 環境なので off
            "noReactSpecificProps": "off"
          }
        }
      },
      "javascript": {
        "globals": ["React"]
      }
    }
  ]
}
