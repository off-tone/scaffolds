{
  // package.json のスキーマ情報を更新する
  "json.schemaDownload.enable": true,
  // パッケージ側の lockfile がない場合に勝手に生成されるのを防ぐ
  "npm.autoDetect": "off",

  // 保存時に自動でフォーマットを実行する
  "editor.formatOnSave": true,
  // Biome をデフォルトフォーマッターにする
  "editor.defaultFormatter": "biomejs.biome",

  // デフォルトフォーマッターだけを指定すると、保存時のフォーマットに
  // タイムラグがあるので各言語ごとに明示的に指定する
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  }
}
